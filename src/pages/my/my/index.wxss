.index {
  width: 100%;
  height: 100%;
}
.index .back {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.index .inf {
  width: 100%;
  height: 50%;
  padding: 20px;
  color: #6171d8;
  box-shadow: 0px 0px 32px 8px rgba(4, 0, 0, 0.05);
  opacity: 0.8;
  border-radius: 10px;
}
.index .inf .avatarUrl {
  height: 200px;
  width: 200px;
  border-radius: 50%;
  margin-bottom: 40px;
}
.index .changeUser,
.index .loadQuestion {
  width: 93%;
  height: 100px;
  margin-left: 2%;
  background: #ffffff;
  color: #6171d8;
  box-shadow: 0px 0px 32px 8px rgba(4, 0, 0, 0.05);
  opacity: 0.8;
  border-radius: 10px;
  line-height: 100px;
  padding-left: 15px;
  letter-spacing: 5px;
}
.index .loadQuestion {
  margin-top: 20px;
}
