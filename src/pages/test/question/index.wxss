.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #487ac8;
}
.page .bgi {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.page .title {
  height: 10%;
  margin-top: 20px;
  letter-spacing: 3px;
  color: #795cdb;
  font-size: 80px;
  font-family: KaiTi;
}
.page .time {
  height: 10%;
}
.page .time .last_time {
  font-size: 50px;
}
.page .content {
  height: 750px;
  margin-top: 20px;
  letter-spacing: 5px;
  width: 80%;
  background: #ffffff;
  box-shadow: 0px 0px 32px 8px rgba(4, 0, 0, 0.1);
  opacity: 0.8;
  border-radius: 40px;
  padding: 40px 15px;
}
.page .content .questions {
  width: 100%;
}
.page .content .questions .answers {
  width: 80%;
  margin-top: 60px;
  font-size: 30px;
}
.page .btns {
  width: 100%;
  height: 20%;
  margin: 5% 12px;
}
.page .btns .last,
.page .btns .next,
.page .btns .load {
  width: 30%;
  height: 100px;
  font-size: 37px;
  font-family: KaiTi;
  background: linear-gradient(rgba(18, 214, 223, 0.3) 5%, rgba(247, 15, 255, 0.3) 100%);
  color: #ffffff;
  letter-spacing: 5px;
}
