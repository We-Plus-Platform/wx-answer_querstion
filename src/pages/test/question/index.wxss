.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #487ac8;
}
.page .bgi {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.page .title {
  height: 10%;
  margin-top: 20px;
  letter-spacing: 3px;
  color: #795cdb;
  font-size: 80px;
  font-family: KaiTi;
}
.page .time {
  height: 10%;
}
.page .time .last_time {
  font-size: 50px;
}
.page .content {
  height: 700px;
  margin-top: 20px;
  letter-spacing: 5px;
  width: 80%;
  background: #ffffff;
  box-shadow: 0px 0px 32px 8px rgba(4, 0, 0, 0.1);
  opacity: 0.8;
  border-radius: 40px;
  padding: 20px 15px;
}
.page .content .main {
  background-image: url(../../../img/答题back.png);
  background-size: cover;
  position: absolute;
  margin-top: 3%;
  right: 16%;
  width: 510px;
  height: 537px;
}
.page .content .questions {
  width: 100%;
}
.page .content .questions .answers {
  width: 80%;
  margin-top: 60px;
  font-size: 30px;
}
.page .content .questions .choosing {
  width: 92px;
  height: 109px;
  position: relative;
  top: 35px;
  left: 11%;
  z-index: 0;
}
.page .content .questions .quesDetail {
  margin-bottom: 5%;
}
.page .btns {
  width: 100%;
  height: 10%;
  margin: 3% 12px;
}
.page .btns .last,
.page .btns .next,
.page .btns .load {
  width: 30%;
  height: 80px;
  font-size: 37px;
  font-family: KaiTi;
  background: linear-gradient(rgba(18, 214, 223, 0.3) 5%, rgba(247, 15, 255, 0.3) 100%);
  color: #ffffff;
  letter-spacing: 5px;
}
